{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build & debug file",
        "type": "shell",
        "command": "g++",
        "args": [
          "-g", "-Wall", "-std=c++17", "-o", "compile/outDebug", "*.cpp", "-lglew32", "-lopengl32", "-lglfw3",  "-lglfw3dll"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "build & run file",
        "type": "shell",
        "command": "g++",
        "args": [
          "-std=c++17", "-o", "compile/outRelease", "*.cpp", "-lglew32", "-lopengl32", "-lglfw3",  "-lglfw3dll"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }